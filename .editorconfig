root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

[*.cs]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

csharp_style_namespace_declarations = file_scoped:warning
csharp_using_directive_placement = outside_namespace:warning
csharp_style_qualified_using = false:warning

# Prefer explicit Program classes over top-level statements.
dotnet_style_prefer_top_level_statements = false:warning

# Keep usings grouped and trimmed.
dotnet_sort_system_directives_first = true:warning
